<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ListPreference
        android:summary="français"
        android:title="Language"
        android:key="langage"
        android:defaultValue="français"
        android:entryValues="@array/pref_langage_option"
        android:entries="@array/pref_langage_option"/>

    <EditTextPreference
        android:key="Language_2"
        android:title="Langage 2"
        android:summary="Enter the movie language"
        android:defaultValue="français" />

    <ListPreference
        android:summary="weekly"
        android:title="Notification"
        android:key="notification"
        android:defaultValue="weekly"
        android:entryValues="@array/pref_notification_option"
        android:entries="@array/pref_notification_option"/>
</PreferenceScreen>
